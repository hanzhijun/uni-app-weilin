    line-height: 44rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    left: 0;
    top: 80rpx;
    z-index: 2;
}
.xin-outbar .text-xintiao {
    width: 220rpx;
    height: 60rpx;
    font-size: 54rpx;
    color: #fff;
    text-align: right;
    position: absolute;
    left: 0;
    top: 118rpx;
    z-index: 2;
}
.xin-outbar .icon-xin {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    left: 236rpx;
